Include ~/.config/ssh/local.config

# specific host config

Host github.miko.internal
  Hostname ssh.github.com
  User git
  Port 443
  IdentitiesOnly yes

# global config

Host *.avm.internal
  PreferredAuthentications publickey,password

Host *.avm.internal *.sui.internal *.miko.internal
  User avm_martin
  PubkeyAuthentication yes
  IdentityFile ~/.ssh/id_personal
  IdentitiesOnly yes
