Include ~/.config/ssh/local.config

# specific host config

Host github.miko.internal github.com
  Hostname ssh.github.com
  User git
  Port 443
  IdentitiesOnly yes

# global config

Host *.risu.internal
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null

Host *.ame.internal
  PreferredAuthentications publickey,password

