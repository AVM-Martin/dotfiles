	name = AVM.Martin
	email = avmm.martin+github@gmail.com
	signingkey = 566629832395B5EC74C74E0C25F846A221B3F159

[color]
	ui = auto

[core]
	eol = lf
	autocrlf = false
	excludesFile = ~/.config/git/ignore
	attributesFile = ~/.config/git/attributes

[advice]
	addEmptyPathspec = false
	skippedCherryPicks = false

[status]
	relativePaths = true
	showStash = false

[log]
	date = iso8601-strict

[init]
	defaultBranch = main

[commit]
	gpgSign = true
	template = ~/.config/git/commit_message

[tag]
	gpgSign = true
	sort = -version:refname

[versionsort]
	suffix = -

[push]
	default = simple
	followTags = true

[fetch]
	prune = true
	pruneTags = true

[pull]
	rebase = true

[rebase]
	autoStash = true

[pager]
	aliases = false
	branch = false
	last = false
	lg = false

[alias]
	ap = add --patch
	bd = branch-delete # see .local/bin/git-branch-delete
	br = branch --sort committerdate -vv
	cb = checkout -b
	co = checkout
	cp = cherry-pick
	dc = diff --cached
	gl = config --global --list --includes
	lg = log --max-count 25 --oneline --reverse
	pu = !"git push --set-upstream \"${1:-origin}\" \"${2:-$(git branch --show-current)}\" && :"
	st = status --show-stash

	wip = commit --message="WIP"

	cina = commit --no-edit --amend
	curr = branch --show-current
	last = log --max-count 1 --pretty=fuller
	root = rev-parse --show-toplevel

	aliases = config --get-regexp '^alias\\.'
	unstage = restore --staged

[include]
	path = ~/.config/git/url.gitconfig
	path = ~/.config/git/local.gitconfig
