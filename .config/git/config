	insteadOf = https://github.com/

[include]
	path = config.local

[color]
	ui = auto

[core]
	eol = lf
	autocrlf = false
	excludesFile = ~/.config/git/ignore
	attributesFile = ~/.config/git/attributes

[init]
	defaultBranch = main

[commit]
	template = ~/.config/git/commit_message

[push]
	default = simple

[pull]
	rebase = true

[rebase]
	autoStash = true

[pager]
	aliases = false
	branch = false
	last = false
	lg = false

[alias]
	co = checkout
	cb = checkout -b
	ci = commit
	dc = diff --cached
	st = status
	lg = log --max-count 25 --oneline --reverse
	pu = !"f() { git push --set-upstream \"${1:-origin}\" $(git rev-parse --abbrev-ref HEAD); }; f"
	gl = config --global --list --includes
	cp = cherry-pick

	wip = commit -m "WIP"

	curr = rev-parse --abbrev-ref HEAD
	last = log --max-count 1
	cina = commit --no-edit --amend
	root = rev-parse --show-toplevel

	unstage = restore --staged

	aliases = config --get-regexp '^alias\\.'
